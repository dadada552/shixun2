.pageBox {
  background-color: #eee;
  position: relative;
  padding-bottom: 60rpx;
}
.topbox {
  height: 556rpx;
  width: 100%;
  background-color: #eb4450;
  display: flex;
  align-items: center;
}
.topbox .btn-box {
  width: 140rpx;
  height: 80rpx;
  margin: 0 auto;
}
.likeBox {
  width: 80%;
  position: absolute;
  left: 80rpx;
  top: 490rpx;
}
.myorder {
  margin: 0 auto;
  margin-top: 100rpx;
  background-color: #fff;
  width: 80%;
}
.myorder .title {
  border-bottom: 3px solid #eee;
  padding: 20rpx 20rpx;
}
.address {
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #fff;
  width: 80%;
  padding: 20rpx 10rpx;
}
.link {
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #fff;
  width: 80%;
  padding: 0 10rpx;
}
.link .top {
  display: flex;
  justify-content: space-between;
  border-bottom: 3px solid #eee;
  padding: 10rpx 0;
}
.link .center {
  border-bottom: 3px solid #eee;
  padding: 10rpx 0;
}
.link .bottom {
  padding: 10rpx 0;
}
.share {
